<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        android:textColor="@color/colorPrimary" />

    <!-- Tab Navigation -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/surfaceDark"
        android:padding="4dp"
        android:layout_marginBottom="15dp"
        android:baselineAligned="false">

        <Button
            android:id="@+id/tabRemote"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_remote"
            android:background="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:layout_marginEnd="5dp"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/tabNetwork"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_network"
            android:background="@color/buttonNormal"
            android:textColor="@color/textSecondary"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            style="?android:attr/buttonBarButtonStyle" />

        <Button
            android:id="@+id/tabScreen"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/title_screen"
            android:background="@color/buttonNormal"
            android:textColor="@color/textSecondary"
            android:layout_marginStart="5dp"
            style="?android:attr/buttonBarButtonStyle" />
    </LinearLayout>

    <!-- Device Management -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <Spinner
            android:id="@+id/deviceSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/surfaceDark"
            android:padding="10dp" />

        <ImageButton
            android:id="@+id/refreshButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@color/buttonNormal"
            android:contentDescription="@string/refresh"
            android:src="@android:drawable/ic_menu_rotate"
            android:tint="@android:color/white" />

        <ImageButton
            android:id="@+id/disconnectButton"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:background="@color/powerButton"
            android:contentDescription="@string/disconnect"
            android:src="@android:drawable/ic_menu_close_clear_cancel"
            android:tint="@android:color/white" />
    </LinearLayout>

    <!-- Status Text -->
    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ready"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@color/surfaceDark"
        android:layout_marginBottom="15dp" />

    <!-- Tab Content Container -->
    <FrameLayout
        android:id="@+id/tabContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>